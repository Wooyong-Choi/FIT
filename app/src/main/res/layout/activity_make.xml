<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25A599"
    tools:context="india.lg.intern.fit.MakeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/walkingman"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#25A599"
        android:text="Collect"
        app:srcCompat="@drawable/collect"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="259dp"

        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#005555"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="259dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBottom="@+id/collect"
        android:layout_alignEnd="@+id/collect" />


</RelativeLayout>